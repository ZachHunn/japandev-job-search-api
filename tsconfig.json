{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "api",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "target": "es2017",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "api/types/*"]
    }
  },

  "include": ["./api/**/*", "api/src"]
}
